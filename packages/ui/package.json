  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.0.0",
    "eslint-config-custom": "*",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.0",
    "tsconfig": "*",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
